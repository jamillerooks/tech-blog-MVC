 <h2>Your comments are welcome - {{user.name}}</h2>
 
 <div class="row mt-2"></div>
<div class="post card">
  <div class="card-header">
 {{#if logged_in}}
  <div class="post card">
  <div class="card-header">
 <div class="col-md-4"></div>
     <h2>Add Comment</h2>
	<h4 class="post-title ">{{title}}</h4>
	<p class="post-title ">{{post_detail}}</p>
	<p>Posted by {{user.name}} on {{format_date date_created}}</p>
  	<form  class= "form-label  new-comment-form card-body">
  	<input id='new-comment-id' type="hidden" name="post-id" value="{{post.id}}" />
	<textarea id='new-comment-detail' name="comment-detail"
	placeholder="Comments"
	cols="100"
	rows="4"></textarea>
	</div>
	<button class="btn btn-outline-primary" type="submit">Submit</button>
  </form>
  </div>
  	{{/if}}
		<h2>Comments</h2>
		{{#each comments}}
		<div class="">
			<p class="text-center ">{{comment_detail}}</p>
			<p class="text-center "><span>~</span>Created by {{user.name}} on {{format_date date_created}}<span>~</span></p>
		</div>
		{{/each}}



	





	
		<script src="/js/comments.js"></script>